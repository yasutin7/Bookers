<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h1> Editing Book </h1>
<%= form_with model: @book ,local: true do |f| %>
  <label>Title</label>
  <div class="field">
    <%= f.text_field :title %>
  </div>
  <label>body</label>
  <div class="field">
    <%= f.text_area :body %>
  </div>
  <div class= "actions">
    <%= f.submit value="Update Book" %>
  </div>
<% end %>
<%= link_to "Show", book_path(@book.id) %>
