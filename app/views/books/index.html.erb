<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to "Show", book_path(book.id) %></td> 
        <td><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td><%= link_to "Destroy", book_path(book.id) ,method: :delete,local: true , "data-confirm" => "本当に削除しますか？" %></td>
      </tr>
    <%end%>
  </tbody>
</table>

<p id = "alert"><%= flash[:alert] %></p>
<%= render partial: 'new' %>
